{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jsx-a11y"
    ],
    "rules": {
        "no-use-before-define": [0],
        "max-len": ["error", {
            "code": 500,
            "tabWidth": 2,
            "ignoreUrls": true
        }],
        "react/prefer-stateless-function": [1],
        "jsx-a11y/href-no-hash": "off",
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "no-else-return": [0],
        "react/prop-types": [0],
        "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }]
    }
}
